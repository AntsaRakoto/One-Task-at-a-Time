<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="0dp"
    tools:context=".InputProjetActivity">

    <!-- HEADER -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/topbar_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_arrow_back" />

            <ImageView
                android:id="@+id/profileBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_profile"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- TITRE / INSTRUCTION -->
    <!-- TITRE -->
    <TextView
        android:id="@+id/tvProjetTitre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Entrer le nom du projet"
        android:fontFamily="@font/merriweather_regular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/top_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CHAMP POUR LE NOM DU PROJET -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etProjetNameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/tvProjetTitre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProjetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du projet"
            android:inputType="textPersonName"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!-- INSTRUCTION POUR LE TEMPS -->
    <!-- INSTRUCTION POUR LE TEMPS -->
    <TextView
        android:id="@+id/tvTimeTitre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Temps que tu prÃ©vois pour ce projet"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/etProjetNameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CHOIX DE LA DUREE AVEC NUMBERPICKER -->
    <LinearLayout
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimeTitre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <NumberPicker
            android:id="@+id/npHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:minValue="0"
            tools:maxValue="23"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h"
            android:padding="4dp"/>

        <NumberPicker
            android:id="@+id/npMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:minValue="0"
            tools:maxValue="59"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min"
            android:padding="4dp"/>
    </LinearLayout>



    <Button
        android:id="@+id/btn_projet"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/beige_fonce"
        android:textColor="@color/text_main"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:fontFamily="@font/merriweather_regular"
        android:text="Valider"
        android:gravity="center"
        android:padding="16dp"
        app:cornerRadius="24dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
